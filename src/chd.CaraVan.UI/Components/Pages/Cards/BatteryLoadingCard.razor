<MudChip T="object" Color="@_color" Variant="Variant.Outlined">
    <MudText Typo="Typo.h6">
        @Ampere.ToString("n2")
    </MudText>
</MudChip>
@code {
    [Parameter] public decimal Ampere { get; set; }

    private Color _color => this.Ampere < 0 ? Color.Error : this.Ampere > 0 ? Color.Success : Color.Primary;
}
