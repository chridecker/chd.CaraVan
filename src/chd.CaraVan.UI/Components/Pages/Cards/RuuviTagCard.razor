<MudCard Outlined="true" Class="device-card" @onclick="this.NavigateToDevice">
    <MudCardHeader>
        <MudIcon Icon="@Icons.Material.Filled.Sensors" />
        <MudText Typo="Typo.subtitle2"> @DeviceDto.Name</MudText>
    </MudCardHeader>
    <MudCardContent>
        @if (this._data != null)
        {
            <DataCard Data="this._data" Min="@this._min" Max="@this._max" />
        }
    </MudCardContent>
</MudCard>