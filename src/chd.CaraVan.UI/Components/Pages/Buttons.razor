@page "/buttons"
@inject IAESManager manager

@using BlazorApp3
@using chd.CaraVan.Devices
@using chd.CaraVan.UI.Components.Pages.Cards

<SmartButton Checked="manager.IsActive" CheckedChanged="Change"></SmartButton>
@code {
    private void Change(bool val)
    {
        if (val)
        {
            manager.SetActive();
        }
        else
        {
            manager.Off();
        }
    }
}
